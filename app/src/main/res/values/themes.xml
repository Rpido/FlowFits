<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FlowFits" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Brand Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Secondary Brand Colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- Background Colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOnBackground">@color/on_background</item>
        
        <!-- Error Colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        
        <!-- Window Configuration -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.FlowFits" parent="Base.Theme.FlowFits" />

    <!-- Transparent background for login/register to prevent white flash -->
    <style name="Theme.FlowFits.Transparent" parent="Theme.FlowFits">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>